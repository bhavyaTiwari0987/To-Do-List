<html>
                    <head>
                                        <title>
                                                            <%= title %>
                                        </title>
                                        <script src="https://kit.fontawesome.com/74ad6da199.js" crossorigin="anonymous"></script>
                                        <link rel="stylesheet" href="/css/style.css">
                    </head>
                                        <body>
                                        <div id= "container">
                                        <!-- heading -->
                                      <h1>To Do App</h1>  
                                      <!-- form -->
                                      <form action="/list/add_details" method="POST">
                                        <!-- write description -->
                                        <div id="description-box">
                                        <label for="description">Write description here:</label></br>
                                        <input type="text" id="description" name="description"    placeholder="write here!!"  required>
                                        </div>

                                        <div id="category-date"> 
                                        <!-- category -->
                                        <div id="category-box">
                                        <label for="category">Choose a category:</label></br>
                                        <select name="category" id="category" required>
                                                            <option value="personal">personal</option>
                                                            <option value="work">work</option>
                                                            <option value="family">family</option>
                                                            <option value="social">social</option>
                                                            <option value="other">other</option>
                                        </select>
                                        </div>

                                        <!-- calender -->
                                        <div id="date-box">
                                        <label for="date">Choose date:</label></br>
                                        <input type="date" id="date" name="date" required>
                                        </div>
                                        </div>

                                        <div id="button">
                                        <button id="submit">ADD TASK</button></br>
                                        <!-- <button id="delete">DELETE</button> -->
                                        </div>

                                      </form>



                                
                                      <!-- render list -->
                              <ul>
                                    <% for(let i of listInDb) { %>

                                          <li>
                                                <div id= "list-box">
                                                  <div id="list-subbox1">
                                                      <p><%= i.description %></p>
                                                      <p><%= i.date %></p>
                                                  </div>
                                                  <div id="list-subbox2">
                                                      <p><%= i.category %></p>
                                    
                                                  
                                                      <div id="delete-button">
                                                            <a href="/list/delete_task/<%=i.id%>">
                                                                 <i class="fa-solid fa-trash sub-delete"></i>
                                                            </a>
                                                      </div>
                                                  </div>
                                                </div>
                                                
                                          </li>


                                    <% } %>


                              </ul>
                    </div>
                    </body>
</html>